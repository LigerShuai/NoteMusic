<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_main_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/divider" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/view_mini_player"
        android:background="@color/color_rv_divider" />

    <com.liger.note.ui.view.MiniPlayerView
        android:id="@+id/view_mini_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_mini_player_height"
        android:layout_alignParentBottom="true" />

</RelativeLayout>